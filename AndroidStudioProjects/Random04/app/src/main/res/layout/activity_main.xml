<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="50dp"
    android:background="@color/white">

   <androidx.cardview.widget.CardView
       android:id="@+id/cajaPrincipal"
       android:layout_width="match_parent"
       android:layout_height="350dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="70dp"
       app:cardBackgroundColor="@color/black"
       app:cardCornerRadius="16dp"
      >
      <LinearLayout
          android:id="@+id/inicialInforma"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:orientation="vertical">

         <TextView
             android:id="@+id/bienvenido"
             android:layout_marginTop="50dp"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/bienvenido_a"
             android:textColor="@color/white"
             android:textStyle="bold">

         </TextView>
         <TextView
             android:id="@+id/fecha"
             android:layout_marginTop="50dp"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/la_fecha_es"
             android:textColor="@color/white"
             android:textStyle="bold">

         </TextView>


         <EditText
             android:id="@+id/introduceNombre"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="60dp"
             android:textColor="@color/white"
             android:backgroundTint="@color/white"
             android:textColorHint="@color/white"
             android:hint="@string/introduzca_su_nombre_de_usuario"
             >
         </EditText>


      </LinearLayout>
   </androidx.cardview.widget.CardView>

   <Button
       android:id="@+id/boton1"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:layout_marginTop="32dp"
       android:text="@string/continuar"
       app:layout_constraintTop_toBottomOf="@id/cajaPrincipal"
       tools:layout_editor_absoluteX="49dp">
   </Button>


</androidx.constraintlayout.widget.ConstraintLayout>